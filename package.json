{
  "name": "sih-backend",
  "version": "1.0.0",
  "description": "Backend for the SIH application",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:api dev:ws",
    "dev:api": "ts-node src/api.ts",
    "dev:ws": "ts-node src/server.ts",
    "start": "node dist/api.js",
    "init-db": "ts-node src/init-db.ts",
    "build": "tsc"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "npm-run-all": "^4.1.5",
    
    "sqlite3": "^5.1.7",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    
    "@types/ws": "^8.5.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
